extends ../layouts/main

block contenido

    h2 Crear pedido

    form(method="POST")

        label.form-label(for="camisetaId") Camiseta:
        select(name="camisetaId", id="camisetaId", required)
            each camiseta in camisetas
                option(value=camiseta._id) #{camiseta.marca} - #{camiseta.talla} (#{camiseta.color})
        br

        label.form-label(for="cantidad") Cantidad:
        input.form-control(
            type="number",
            name="cantidad",
            id="cantidad",
            min="1",
            required
        )
        br

        label.form-label(for="cliente") Cliente:
        input.form-control(
            type="text",
            name="cliente",
            id="cliente",
            required
        )
        br

        label.form-label(for="metodoPago") MÃ©todo de pago:
        select(name="metodoPago", id="metodoPago", required)
            option(value="tarjeta") Tarjeta
            option(value="paypal") PayPal
            option(value="efectivo") Efectivo
            option(value="transferencia") Transferencia
        br

        label.form-label(for="fecha") Fecha:
        input.form-control(
            type="date",
            name="fecha",
            id="fecha",
            required
        )
        br

        label.form-label(for="estado") Estado:
        select(name="estado", id="estado", required)
            option(value="pendiente") Pendiente
            option(value="enviado") Enviado
            option(value="entregado") Entregado
            option(value="cancelado") Cancelado
        br

        label.form-check-label(for="pagado") Pagado
        input.form-check-input(
            type="checkbox",
            name="pagado",
            id="pagado"
        )
        br

        button.btn.btn-info(type="submit") Enviar
        button.btn.btn-danger(type="reset") Cancelar
