extends ../layouts/main

block contenido

    h2 Editar pedido

    form(method="POST")
        //- Camiseta asociada al pedido
        label.form-label(for="camisetaId") Camiseta:
        select(name="camisetaId", id="camisetaId", required)
            each camiseta in camisetas
                option(
                    value=camiseta._id,
                    selected=(datos.camisetaId == camiseta._id)
                ) #{camiseta.marca} - #{camiseta.talla} (#{camiseta.color})
        br

        //- Cantidad
        label.form-label(for="cantidad") Cantidad:
        input.form-control(
            type="number",
            name="cantidad",
            id="cantidad",
            min="1",
            required,
            value=datos.cantidad
        )
        br

        //- Cliente
        label.form-label(for="cliente") Cliente:
        input.form-control(
            type="text",
            name="cliente",
            id="cliente",
            required,
            value=datos.cliente
        )
        br

        //- Método de pago
        label.form-label(for="metodoPago") Método de pago:
        select(name="metodoPago", id="metodoPago", required)
            option(value="tarjeta", selected=(datos.metodoPago=="tarjeta")) Tarjeta
            option(value="paypal", selected=(datos.metodoPago=="paypal")) PayPal
            option(value="efectivo", selected=(datos.metodoPago=="efectivo")) Efectivo
            option(value="transferencia", selected=(datos.metodoPago=="transferencia")) Transferencia
        br

        //- Fecha del pedido
        label.form-label(for="fecha") Fecha:
        input.form-control(
            type="date",
            name="fecha",
            id="fecha",
            required,
            value=datos.fecha
        )
        br

        //- Estado
        label.form-label(for="estado") Estado:
        select(name="estado", id="estado", required)
            option(value="pendiente", selected=(datos.estado=="pendiente")) Pendiente
            option(value="enviado", selected=(datos.estado=="enviado")) Enviado
            option(value="entregado", selected=(datos.estado=="entregado")) Entregado
            option(value="cancelado", selected=(datos.estado=="cancelado")) Cancelado
        br

        //- Pagado
        label.form-check-label(for="pagado") Pagado
        input.form-check-input(
            type="checkbox",
            name="pagado",
            id="pagado",
            checked=(datos.pagado == 1)
        )
        br

        button.btn.btn-info(type="submit") Enviar
        button.btn.btn-danger(type="reset") Cancelar
