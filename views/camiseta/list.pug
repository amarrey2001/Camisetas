extends ../layouts/main

block contenido

    h2.text-center.mb-4(style="color:#f5f5f5;") Listado de camisetas
    if mensaje!=null
        p.text-center.text-warning= mensaje

    table.table.table-dark.table-striped.table-hover
        thead(style="background-color:#1c1c1c; color:#f5f5f5;")
            tr
                th ID
                th Talla
                th Sexo
                th Color
                th Marca
                th Stock
                th Precio
                th Activo
                th Editar
                th Desactivar
        tbody
            each camiseta in camisetas
                tr
                    td=camiseta.id
                    td=camiseta.talla
                    td=camiseta.sexo
                    td
                        span(style=`display:inline-block; width:20px; height:20px; border-radius:50%; border:1px solid #333; background-color:${camiseta.color}; margin-right:5px;`)
                        span(style="color:#f5f5f5;")=camiseta.color
                    td(style="color:#f5f5f5;")=camiseta.marca
                    td(style="color:#f5f5f5;")=camiseta.stock
                    td(style="color:#f5f5f5;") #{camiseta.precio} €
                    td
                        if camiseta.activo==1
                            span(style="color:#28a745; font-weight:bold;") Sí
                        else
                            span(style="color:#dc3545; font-weight:bold;") No
                    td
                        a.btn.btn-success.btn-sm(href=`/admin/camiseta/edit/${camiseta.id}`) Editar
                    td
                        a.btn.btn-danger.btn-sm(href=`/admin/camiseta/del/${camiseta.id}`) Desactivar

    p.text-center.mt-4
        a.btn.btn-primary(href="/admin/camiseta/add") Añadir una nueva
